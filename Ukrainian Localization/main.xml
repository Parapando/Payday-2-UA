<mod name="Українська локалізація тексту" global_key="UALoc" core_class="Hooks/UALocCore.lua" author="Parapando">
    <ScriptMods>
       <mod file="UALocScriptData.xml" type="custom_xml" target_file="gamedata/menus/start_menu" target_type="menu">
            <options merge_mode="script_merge"/>
       </mod>
    </ScriptMods>

    <Hooks>
		<!-- <hook source_file="lib/states/menumainstate" file="Hooks/UALocFile.lua"/> -->
		<hook source_file="lib/managers/menumanager" file="Hooks/UALocCore.lua"/>
    </Hooks>

    <Localization directory="loc">
      <group language="portuguese">

        <loc file="text/subtitles.lua"/>
        <loc file="text/menu.lua"/>
        <loc file="text/atmospheric_text.lua"/>
        <loc file="text/debug.lua"/>
        <loc file="text/savefile.lua"/>
        <loc file="text/system_text.lua"/>
        <loc file="text/vr_text.lua"/>
        <loc file="text/systemmenu.lua"/>
        <loc file="text/blackmarket.lua"/>
        <loc file="text/challenges.lua"/>
        <loc file="text/heist.lua"/>
        <loc file="text/hud.lua"/>
        <loc file="text/ingame_achievements.lua"/>

      </group>

      <group language="english">

        <loc file="text/subtitles.lua"/>
        <loc file="text/menu.lua"/>
        <loc file="text/atmospheric_text.lua"/>
        <loc file="text/debug.lua"/>
        <loc file="text/savefile.lua"/>
        <loc file="text/system_text.lua"/>
        <loc file="text/vr_text.lua"/>
        <loc file="text/systemmenu.lua"/>
        <loc file="text/blackmarket.lua"/>
        <loc file="text/challenges.lua"/>
        <loc file="text/heist.lua"/>
        <loc file="text/hud.lua"/>
        <loc file="text/ingame_achievements.lua"/>

      </group>
    </Localization>

    <Options auto_build_menu="true" save_file="braziliansavefile.txt">
        <options>
            <merge_data area_bg="half"/>
                <option_group name="Compatibility">
                  <option type="bool" default_value="true" name="HopLibShouldBeInPortuguese"/>
                  <option type="bool" default_value="true" name="BeardLibShouldBeInPortuguese"/>
                </option_group>
                <option_group name="Extras">
                  <option type="bool" default_value="false" name="AprilFools2022"/>
                  <option type="bool" default_value="false" name="BRLCurrency"/>
                </option_group>
        </options>
    </Options>

	<AddFiles file="add_UALoc.xml"/>
</mod>